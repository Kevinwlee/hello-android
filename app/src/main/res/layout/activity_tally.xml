<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.kevin.myapplication.TallyActivity"
    android:textAlignment="center">

    <TextView
        android:id="@+id/tally_text_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="0"
        android:textSize="72dp"
        android:textAlignment="center"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        style="@style/Base.TextAppearance.AppCompat.Widget.TextView.SpinnerItem" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.13"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/add_button"
            android:onClick="addTapped"/>

        <Button
            android:id="@+id/button2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/subtract_button"
            android:onClick="subtractTapped"/>
    </LinearLayout>

</LinearLayout>
